<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
  
    <title>Derby Manager</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="pwderby">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <h2>Pinewood Derby</h2>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="" ui-sref="event">Event</a></li>
                    <li><a href="" ui-sref="registration">Register</a></li>
                    <li><a href="" ui-sref="race">Race</a></li>
                    <li><a href="" ui-sref="results">Results</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!-- this is where our dynamic content will be inserted, through ui-router -->
        <ui-view></ui-view>

        <hr />
        <footer>
            <p>&copy; 2016 - Brian Cox</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="signalr/hubs"></script>

    <script src="app/app.js"></script>
    <script src="app/app.route.js"></script>
    <script src="app/event.service.js"></script>
    <script src="app/home.controller.js"></script>
    <script src="app/common/common.services.js"></script>
    <script src="app/event/event.controller.js"></script>
    <script src="app/event/event.service.js"></script>
    <script src="app/race-day/race.controller.js"></script>
    <script src="app/race-day/race.service.js"></script>
    <script src="app/registration/registration.controller.js"></script>
    <script src="~/app/results/results.controller.js"></script>
    <script src="~/app/results/results.service.js"></script>
    <script src="~/app/race-day/track.monitor.service.js"></script>
</body>
</html>
